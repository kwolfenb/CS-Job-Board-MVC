@using JobBoard.Models;

<!DOCTYPE html>
<html>
    <head>
        <title>Job Listings</title>
    </head>
    <body>
        <h3>Current Job Openings</h3>
        <ul>


        @if (Model.Count == 0)
        {
        <p>There are no job listings currently.</p>
        <a href ="/newjob"> Click to add job.</a>
        }
        @if(Model.Count != 0)
        {
            @foreach (Job job in Model)
            {
                <h4>@job.GetTitle()</h4>
                <li>@job.GetDescription()</li>
                <li>@job.GetStartingDate()</li>
                <li>@job.GetHourlyRate()</li>
            }
        }
        </ul>

        <a href ="/"> Go to Home Page</a>

    </body>

</html>